<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="25dp"
        app:background="@color/black"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="142dp"
                        android:backgroundTint="@color/light_background"
                        >

                        <ImageView
                            android:id="@+id/meal_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:backgroundTintMode="src_over"

                            android:src="@drawable/pizza" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:backgroundTint="#000000"
                        >

                        <TextView
                            android:id="@+id/meal_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/ic_baseline_food_bank_24"
                            tools:text="Pizza" />

                        <TextView
                            android:id="@+id/country_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/ic_baseline_location_on_24"
                            tools:text="Italy" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/meal_ingraduants"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_baseline_restaurant_menu_24"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            tools:text="Chicken" />




                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/fav_icon"
                android:layout_width="41dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_baseline_favorite_24"
                android:padding="4dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

