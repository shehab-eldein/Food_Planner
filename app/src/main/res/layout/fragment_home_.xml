<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGrayBackGround"
        tools:context=".OnBoarding.Home.Home_Fragment">

        <TextView
            android:id="@+id/UserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="cursive"
            android:text="shehab el dein"
            android:textColor="@color/custom"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/app_name_food_tv3"
            app:layout_constraintTop_toTopOf="@+id/app_name_food_tv3" />

        <TextView
            android:id="@+id/app_name_food_tv3"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="Welcome:"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/category_tv"
            app:layout_constraintStart_toStartOf="@+id/category_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Recycler_File"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/lightGrayBackGround"
            app:layout_constraintEnd_toEndOf="@+id/rv"
            app:layout_constraintStart_toStartOf="@+id/inspiration_tv4"
            app:layout_constraintTop_toBottomOf="@+id/inspiration_tv4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/lightGrayBackGround"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/category_tv"
            app:layout_constraintTop_toBottomOf="@+id/category_tv" />

        <TextView
            android:id="@+id/app_name_planner_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:text="@string/planner"
            android:textColor="@color/custom"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/app_name_food_tv"
            app:layout_constraintTop_toBottomOf="@+id/app_name_food_tv" />

        <TextView
            android:id="@+id/app_name_food_tv"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="90dp"
            android:text="@string/food"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inspiration_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/category_Meals"

            android:textColor="@color/black"
            android:textSize="23sp"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/rv"
            app:layout_constraintTop_toBottomOf="@+id/rv" />

        <TextView
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:text="@string/inspiration"

            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name_planner_tv" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/home_pizza"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/bakeup_label"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="@+id/rv"
            app:layout_constraintTop_toTopOf="@+id/category_tv"
            app:srcCompat="@drawable/database" />

        <ImageView
            android:id="@+id/logOut_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:rotationY="-201"
            app:layout_constraintBottom_toTopOf="@+id/app_name_food_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/log_out" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
